  <script>
    /* Populate grid with sample images + categories/locations */
    const samples = [
      "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1400&auto=format&fit=crop&crop=faces",
      "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1504674900247-0877df9cc836?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1503602642458-232111445657?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1517816743773-6e0fd518b4a6?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1515879218367-8466d910aaa4?q=80&w=1400&auto=format&fit=crop",
      "https://images.unsplash.com/photo-1469474968028-56623f02e42e?q=80&w=1400&auto=format&fit=crop"
    ];
    const categories = ["Portrait","Sport","Food","Product","Event"];
    const locations = ["New York","London","Los Angeles","Tokyo","Berlin"];
    const grid = document.getElementById('grid');
    const tpl = document.getElementById('cardTpl').content;

    for (let i=0;i<64;i++){
      const node = document.importNode(tpl,true);
      const article = node.querySelector('article');
      const img = node.querySelector('img');
      const title = node.querySelector('.font-semibold');
      const meta = node.querySelector('.text-xs');

      const cat = categories[i % categories.length];
      const loc = locations[i % locations.length];

      article.setAttribute('data-category', cat);
      article.setAttribute('data-location', loc);

      img.src = samples[i % samples.length] + "&s=" + i;
      img.alt = cat + " Asset " + (i+1);
      title.textContent = cat + " — Asset " + (i+1);
      meta.textContent = ["Uploaded 3 days ago","Uploaded 2 weeks ago","Uploaded 8 days ago","Uploaded 1 mo ago"][i%4] + " • " + (1 + (i%5)) + " MB";
      grid.appendChild(node);
    }

    /* Utilities */
    function allCards(){ return Array.from(grid.querySelectorAll('.asset-card')); }
    function updateCount(){ const visible = allCards().filter(c=>!c.classList.contains('hidden')).length; document.getElementById('assetCount').textContent = visible; }

    /* Filtering logic used by desktop & mobile search */
    function filterGrid(keyword = '', category = 'all', location = '') {
      const k = (keyword || '').trim().toLowerCase();
      const cat = (category || 'all').toLowerCase();
      const loc = (location || '').trim().toLowerCase();

      allCards().forEach(card => {
        const title = (card.querySelector('.font-semibold')?.textContent || '').toLowerCase();
        const c = (card.getAttribute('data-category') || '').toLowerCase();
        const l = (card.getAttribute('data-location') || '').toLowerCase();

        let visible = true;
        if (cat !== 'all' && c !== cat) visible = false;
        if (k && !title.includes(k)) visible = false;
        if (loc && !l.includes(loc)) visible = false;

        card.classList.toggle('hidden', !visible);
      });
      updateCount();
    }

    /* DESKTOP hookups */
    const desktopCategory = document.getElementById('desktopCategory');
    const desktopKeyword = document.getElementById('desktopKeyword');
    const desktopLocation = document.getElementById('desktopLocation');
    const desktopSearchBtn = document.getElementById('desktopSearchBtn');
    const desktopSearchForm = document.getElementById('desktopSearchForm');

    if (desktopSearchBtn) {
      desktopSearchBtn.addEventListener('click', () => {
        filterGrid(desktopKeyword.value, desktopCategory.value, desktopLocation.value);
      });
    }
    // submit with Enter from any desktop field
    desktopSearchForm.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        filterGrid(desktopKeyword.value, desktopCategory.value, desktopLocation.value);
      }
    });

    /* MOBILE: panel toggle and form handling */
    const mobileWrap = document.getElementById('mobileSearchWrap');
    const mobileBtn = document.getElementById('mobileSearchBtn');
    const mobileForm = document.getElementById('mobileSearchForm');
    const mobileClearBtn = document.getElementById('mobileClearBtn');

    mobileBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      mobileWrap.classList.toggle('open');
      if (mobileWrap.classList.contains('open')) {
        setTimeout(()=>document.getElementById('mobileKeyword').focus(), 100);
      }
    });

    // Close panel when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileWrap.contains(e.target)) {
        mobileWrap.classList.remove('open');
      }
    });
    // Close on escape
    window.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        mobileWrap.classList.remove('open');
        const pm = document.getElementById('previewModal');
        if (pm && !pm.classList.contains('hidden')) pm.classList.add('hidden');
      }
    });

    mobileClearBtn.addEventListener('click', (e) => {
      e.preventDefault();
      mobileForm.reset();
      filterGrid('', 'all', '');
      mobileWrap.classList.remove('open');
    });

    mobileForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const cat = document.getElementById('mobileCategory').value;
      const kw = document.getElementById('mobileKeyword').value;
      const loc = document.getElementById('mobileLocation').value;
      filterGrid(kw, cat, loc);
      mobileWrap.classList.remove('open');
    });

    /* small inline filter box */
    const filterInput = document.getElementById('filterInput');
    if (filterInput) filterInput.addEventListener('input', (e) => filterGrid(e.target.value, 'all', ''));

    /* Refresh button visual */
    document.getElementById('refresh').addEventListener('click', ()=>{ document.getElementById('refresh').classList.add('opacity-50'); setTimeout(()=>document.getElementById('refresh').classList.remove('opacity-50'),400); });

    /* mobile sidebar toggle */
    const mobileToggle = document.getElementById('mobileToggle');
    const mobileSidebar = document.getElementById('mobileSidebar');
    const mobileOverlay = document.getElementById('mobileOverlay');
    if (mobileToggle){
      mobileToggle.addEventListener('click', ()=> mobileSidebar.classList.toggle('hidden'));
      if (mobileOverlay) mobileOverlay.addEventListener('click', ()=> mobileSidebar.classList.add('hidden'));
    }

    /* preview modal */
    const previewModal = document.getElementById('previewModal');
    const previewBackdrop = document.getElementById('previewBackdrop');
    const modalImage = document.getElementById('modalImage');
    const modalTitle = document.getElementById('modalTitle');
    const modalMeta = document.getElementById('modalMeta');
    const closeBtn = document.getElementById('closeBtn');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    let visibleList = [], currentIndex = -1;
    function refreshVisible(){ visibleList = allCards().filter(c=>!c.classList.contains('hidden')); }
    function openAt(index){
      refreshVisible();
      if (!visibleList.length) return;
      currentIndex = Math.max(0, Math.min(index, visibleList.length-1));
      const card = visibleList[currentIndex];
      const img = card.querySelector('img');
      modalImage.src = img.src;
      modalImage.alt = img.alt;
      modalTitle.textContent = card.querySelector('.font-semibold').textContent;
      modalMeta.textContent = card.querySelector('.text-xs').textContent;
      previewModal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      closeBtn && closeBtn.focus();
    }
    function closeModal(){ previewModal.classList.add('hidden'); modalImage.src=''; document.body.style.overflow=''; currentIndex=-1; }

    grid.addEventListener('click', (e)=>{
      const article = e.target.closest('.asset-card');
      if (!article) return;
      refreshVisible();
      openAt(visibleList.indexOf(article));
    });

    prevBtn && prevBtn.addEventListener('click', ()=>{ if (!visibleList.length) return; openAt((currentIndex-1+visibleList.length) % visibleList.length); });
    nextBtn && nextBtn.addEventListener('click', ()=>{ if (!visibleList.length) return; openAt((currentIndex+1) % visibleList.length); });
    previewBackdrop && previewBackdrop.addEventListener('click', closeModal);
    closeBtn && closeBtn.addEventListener('click', closeModal);
    window.addEventListener('keydown', (e)=>{ if (previewModal.classList.contains('hidden')) return; if (e.key === 'Escape') closeModal(); if (e.key === 'ArrowLeft') prevBtn && prevBtn.click(); if (e.key === 'ArrowRight') nextBtn && nextBtn.click(); });

    /* accessibility: make cards focusable */
    function setFocusable(){ allCards().forEach(c=>c.setAttribute('tabindex','0')); }
    setFocusable();
    updateCount();
  </script>
</body>
</html>
